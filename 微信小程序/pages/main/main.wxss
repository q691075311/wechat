/* pages/main/main.wxss */

.content {
  background-color: rgb(238, 238, 238);
  width: 100%;
}

.swiper {
  width: 100%;
  height: 180px;
  background-color: chartreuse;
}

.weiper-item {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.type {
  margin-top: 10px;
  white-space: nowrap;
}

.itemtype {
  height: 85px;
  text-align: center;
  display: inline-block;
  background-color: white;
}

.line {
  display: inline-block;
  width: 1px;
  background-color: rgb(238, 238, 238);
}

.blockline {
  margin-top: 11px;
  height: 1px;
  background-color: rgb(238, 238, 238);
}

.scrollimage {
  width: 42px;
  height: 42px;
  margin-top: 10px;
}

.scrolltext {
  margin-top: 6px;
  font-size: 12px;
  color: #4a4a4a;
}

.actblock {
  background-color: rgb(238, 238, 238);
}

.actview {
  height: 220px;
  display: flex;
  flex-direction: column;
  margin: 10px;
  background-color: white;
  border-radius: 5px;
}

.actlistimage {
  height: 160px;
  width: 100%;
  border-radius: 5px;
}

.acttext {
  margin-left: 10px;
  margin-top: 10px;
  height: 20px;
  width: 95%;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #4a4a4a;
}

.acttime {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #969696;
  margin-left: 10px;
  margin-top: 0px;
  height: 20px;
  width: 95%;
}
