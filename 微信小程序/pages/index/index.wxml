
<!--index.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="/pages/image/logo-120@2x.png" background-size="cover"></image>

    <!--<text class="userinfo-nickname">{{userInfo.nickName}}</text>-->
  </view>
  <view class="usermotto">

    <!--<text class="user-motto">{{motto}}</text>-->
    <image class="usermotto-head" src="/pages/image/profile.png"></image>
    <input class="usermotto-phone" placeholder="请输入手机号" />
  </view>
  <view class="pswview">
    <image class="usermotto-head" src="/pages/image/password.png"></image>
    <input class="usermotto-psw" password="true" placeholder="请输入密码" />
  </view>
  <button bindtap="login" class="loginbtn">登录</button>
  <button class="typebtn">有账号？返回登录</button>
</view>