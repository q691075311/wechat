/**index.wxss**/

.container {
  padding: 0;
  margin: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 41px;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  display: flex;
  margin-top: 50px;
  margin-left: 25px;
  margin-right: 25px;
  height: 48px;
  border-radius: 24px;
}

.pswview {
  display: flex;
  margin-top: 24px;
  margin-left: 25px;
  margin-right: 25px;
  height: 48px;
  border-radius: 24px;
}

.usermotto-phone {
  width: 80%;
  font-size: 16px;
  height: 48px;
  margin: 0 0 0 5px;
}

.usermotto-head {
  height: 24px;
  width: 24px;
  margin-left: 20px;
  margin-top: 12px;
  margin-bottom: 0px;
}

.usermotto-psw {
  width: 80%;
  font-size: 16px;
  height: 48px;
  margin: 0 0 0 5px;
}

.loginbtn {
  background-color: #cd302c;
  height: 48px;
  font-size: 16px;
  margin: 24px 24px 0px;
  text-align: center;
  color: white;
  border-radius: 24px;
  padding-top: 5px;
}

.typebtn {
  width: 150px;
  margin-top: 16px;
  margin-right: 25px;
  /*background-color: coral;*/
  font-size: 16px;
  color: #cd302c;
  text-align: right;
  float: right;
}
